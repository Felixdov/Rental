<script>
    var alt;
    var init = 0;
    var restTime;
    $(document).ready(function () {
        $('#holdy img').not('#holdy img:first, #listSlide img').hide();
        alt = $('#holdy img:first').attr('alt');
        $('#blackBlock a').text(alt);
        $('main section p').css({
            textAlign: 'center'
        }).hide();
        $('main section a').css({                   // Use {} for using nore than one method in jason style
            textDecoration: 'underline'
        }).
            hover(function () {
                $(this).css("text-decoration", "none");
            }, function () {
                $(this).css("text-decoration", "underline");
            }

            ).click(function (e) {
                e.preventDefault();
                $('main section p').hide();
                $(this).next('p').show();  //next mean that p -paragraph is the next level reletive to <a>

            });
    });

    function changePict() {
        restTime = setTimeout('changePict()', 2000);
        if (init < 4) {
            init++;

            $('#blackBlock').slideToggle(300, function () {
                $('#holdy img:visible').not('#listSlide img').hide();
                $('#holdy img.' + init).show();
                alt = $('#holdy img.' + init).attr('alt');
                $('#blackBlock a').text(alt);
            }).slideToggle(300);
        }
        else {

            $('#blackBlock').slideToggle(300, function () {
                $('#holdy img:visible').not('#listSlide img').hide();
                $('#holdy img:first').show();
                alt = $('#holdy img:first').attr('alt');
                $('#blackBlock a').text(alt);

            }).slideToggle(300);
            init = 1;
        }
    }

    $(function () {
        $('#listSlide li img').click(function () {
            var getClass = $(this).attr('class');
            if (init == getClass) {
                return false;
            } else {

                clearTimeout(restTime);
                init = getClass - 1;
                changePict();
            }
        });
    });
    changePict();

</script>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script>

    //var tblCars = "<tr><th>CAR TYPE</th><th>COLOR</th><th>ENGINE</th><th>CarID</th><th><button>Choose</button></th></tr>";
    $('#showAllCars').click(function () {
        $.getJSON('/api/carlistapi/', function (data) {
            $.each(data, function (key, value) {
                $('<tr><td>' + value.CarTypeName + '</td><td>' + value.Color + '</td><td>' + value.Engine + '</td><td>' + value.CarID + '</td><td>' + '<button>' + 'choose' + '</button>' + '</td></tr>').appendTo($('#Tab'));
            });
        });
    });

    $("#carType").click(function () {
        var carType = $("#chooseCarType option:selected").val();
        alert($("#chooseCarType option:selected").val());
        $.getJSON('/api/carlistapi?CarTypeName=' + carType, function (data) {
            $.each(data, function (key, value) {
                $('<tr><td>' + value.CarTypeName + '</td><td>' + value.Color + '</td><td>' + value.Engine + '</td><td>' + value.CarID + '</td><td>' + value.PricePerDay + '</td><td>' + '<button>' + 'choose' + '</button>' + '</td></tr>').appendTo($('#Tab'));
            });
        });
    });

    $('#postButton').click(function () {
        var ctm = $('#carTypeName').val();
        var color = $('#color').val();
        var engine = $('#engine').val();
        var carTypeID = $('#carTypeID').val();
        var carID = $('#carID').val();
        $.ajax({
            type: 'Post',
            contentType: 'application/json;charset=utf-8',
            url: '/api/carlistapi',
            data: JSON.stringify({
                CarTypeName: ctm,
                Color: color,
                Engine: engine,
                CarTypeId: carTypeID,
                CarID: carID
            }),
            dataType: 'json',
            success: function () {
                $.getJSON('/api/carlistapi/', function (data) {
                    $.each(data, function (key, value) {
                        $('<tr><td>' + value.CarTypeName + '</td><td>' + value.Color + '</td><td>' + value.Engine + '</td><td>' + '<button>' + 'choose' + '</button>' + '</td></tr>').appendTo($('#Tab'));
                    });
                });
            }
        });
    });



</script>
